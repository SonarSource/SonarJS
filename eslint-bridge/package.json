{
  "name": "eslint-bridge",
  "version": "1.0.0",
  "description": "bridge between SonarJS and ESLint",
  "scripts": {
    "build": "npm ci && npm run check-format && npm run clear && npm run compile",
    "clear": "tsc -b src tests --clean",
    "check-format": "prettier --list-different \"{src,tests}/**/!(*.lint).ts\"",
    "test": "jest",
    "ctest": "jest tests/rules/rule-test-launcher.test.ts --verbose=false",
    "format": "prettier --write \"{src,tests,tools}/**/!(*.lint).ts\"",
    "compile": "tsc -b src tests",
    "bundle": "ncc build -e @babel/core -e @babel/eslint-parser -e @babel/preset-env -e @babel/preset-flow -e @babel/preset-react -e eslint bin/server",
    "jar": "npm run bundle && npm pack && mkdirp target/classes && mv eslint-bridge-1.0.0.tgz target/classes",
    "new-rule": "ts-node tools/newRule.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SonarSource/SonarJS.git"
  },
  "license": "LGPL-3.0",
  "bugs": {
    "url": "https://github.com/SonarSource/SonarJS/issues"
  },
  "homepage": "https://github.com/SonarSource/SonarJS#readme",
  "engines": {
    "node": ">=12"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/bytes": "3.1.1",
    "@types/eslint": "8.4.5",
    "@types/eslint-scope": "3.7.4",
    "@types/estree": "1.0.0",
    "@types/express": "4.17.13",
    "@types/functional-red-black-tree": "1.0.1",
    "@types/jest": "28.1.6",
    "@types/node": "16.11.9",
    "jest": "28.1.3",
    "jest-sonar-reporter": "2.0.0",
    "mkdirp": "1.0.4",
    "ncc": "^0.3.6",
    "prettier": "2.7.1",
    "ts-jest": "28.0.7",
    "ts-node": "10.9.1"
  },
  "dependencies": {
    "@babel/core": "7.18.9",
    "@babel/eslint-parser": "7.18.9",
    "@babel/preset-env": "7.18.9",
    "@babel/preset-flow": "7.18.6",
    "@babel/preset-react": "7.18.6",
    "@typescript-eslint/eslint-plugin": "5.30.7",
    "@typescript-eslint/experimental-utils": "5.30.7",
    "@typescript-eslint/parser": "5.30.7",
    "builtin-modules": "3.3.0",
    "bytes": "3.1.2",
    "eslint": "8.20.0",
    "eslint-plugin-chai-friendly": "0.7.2",
    "eslint-plugin-react": "7.30.1",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-sonarjs": "0.14.0",
    "express": "4.18.1",
    "functional-red-black-tree": "1.0.1",
    "postcss-html": "0.36.0",
    "postcss-less": "6.0.0",
    "postcss-scss": "4.0.3",
    "postcss-syntax": "0.36.2",
    "postcss-value-parser": "4.2.0",
    "regexpp": "3.2.0",
    "run-node": "2.0.0",
    "scslre": "0.1.6",
    "stylelint": "14.9.1",
    "typescript": "4.7.4",
    "vue-eslint-parser": "8.3.0",
    "yaml-node12": "1.0.0"
  },
  "bundledDependencies": [
    "@babel/core",
    "@babel/eslint-parser",
    "@babel/preset-env",
    "@babel/preset-flow",
    "@babel/preset-react",
    "eslint",
    "run-node"
  ],
  "prettier": {
    "printWidth": 100,
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "endOfLine": "lf"
  },
  "files": [
    "dist/"
  ]
}

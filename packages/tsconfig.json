{
  "compilerOptions": {
    "target": "ES2021",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "lib": ["ES2021", "dom"],
    "declaration": true,
    "outDir": "../lib",
    "strict": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "useUnknownInCatchVariables": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["../node_modules/@types", "../typings"],
    "baseUrl": ".",
    "paths": {
      "@sonar/css": ["css/src"],
      "@sonar/html": ["html/src"],
      "@sonar/jsts": ["jsts/src"],
      "@sonar/shared": ["shared/src"],
      "@sonar/yaml": ["yaml/src"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.test.json"
    },
    {
      "path": "./jsts/src/rules/tsconfig.json"
    }
  ],
  "files": [],
  "include": []
}
